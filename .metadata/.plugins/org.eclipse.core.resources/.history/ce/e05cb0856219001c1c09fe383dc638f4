 public static String uniqueCharacters(String str1)	{
	// String str1 = "aaaaabbbbbbbcccdddddeeeeffffgggg";
	// String expectedStr = "abc";
	
	String uniqueChars = "" ; 
	for (int i = 0 ; i < str1.length(); i++) {
		char eachChar=str1.charAt(i);
		String currentChar = Character.toString(eachChar);
		
		if (!uniqueChars.contains(currentChar)) {
			uniqueChars += currentChar;
		}}
	return uniqueChars;
} }
 