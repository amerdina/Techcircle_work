public class tst2method {
 
	public static void main(String[] args) {
		
  		 if (passwordValidation("AS!@*ASA")) {
  			 System.out.println("her is your account");
  			 }
  		 }
  		//if (passwordValidation("assword@1")) {
//System.out.println("Here is your new account.");
// 				
// 			}
 			
  public static boolean passwordValidation(String passwardd ) {
	
 	Boolean hasDigit = false;
 	Boolean hasUpperCase = false;
 	Boolean hasLowerCase = false;
 	Boolean symbol = false;
 	boolean isValidPassword = false;
 	
 	if (passwardd.length()>7){
 		for(int i=0;i<passwardd.length();i++) {
 			char ch= passwardd.charAt(i);
 		 
 			if(Character.isDigit(ch)) {
 				hasDigit = true;
 			}
 			if(Character.isUpperCase(ch)) {
 				hasUpperCase = true;
 			}
 			if(Character.isLowerCase(ch)) {
 				hasLowerCase = true;
 			}
 			 
 			if((!Character.isLowerCase(ch))&&(!Character.isUpperCase(ch))) {
 				symbol = true;
	 
 			}}
 		 if(isValidPassword=true)  {
 			System.out.println("welcom");
 		 
 		}else { 
 				System.out.println("invalid" );
 			}
 			
 		 
 	}else {
 		System.out.println("your passward should 7 characters");
 	} 
 	
 	 return isValidPassword  ;
  			
 	 
 	}}	 
